pragma solidity ^0.8.17;

import {IERC20} from '@openzeppelin/contracts/token/ERC20/IERC20.sol';
import {IERC20Metadata} from '@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol';
import {SafeERC20} from '@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol';
import {ERC721EnumerableUpgradeable} from '@openzeppelin/contracts-upgradeable/token/ERC721/extensions/ERC721EnumerableUpgradeable.sol';
import {EnumerableSet} from '@openzeppelin/contracts/utils/structs/EnumerableSet.sol';
import {Strings} from '@openzeppelin/contracts/utils/Strings.sol';

import {BoringBatchable} from '../libraries/BoringBatchable.sol';

import {IHectorProjectFactory} from '../interfaces/IHectorProjectFactory.sol';
import {IHectorProject} from '../interfaces/IHectorProject.sol';
import {IHectorValidator} from '../interfaces/IHectorValidator.sol';

error NOT_OWNER();
error NOT_OWNER_OR_WHITELISTED();
error INVALID_ADDRESS();
error INVALID_TIME();
error PAYER_IN_DEBT();
error INACTIVE_STREAM();
error ACTIVE_STREAM();
error STREAM_ACTIVE_OR_REDEEMABLE();
error STREAM_ENDED();
error STREAM_DOES_NOT_EXIST();
error TOKEN_NOT_ADDED();
error INVALID_AMOUNT();
error ALREADY_WHITELISTED();
error NOT_WHITELISTED();
error LIMITED_SUBSCRIPTION();

contract HectorProject is
    IHectorProject,
    ERC721EnumerableUpgradeable,
    BoringBatchable
{
    using SafeERC20 for IERC20;
    using EnumerableSet for EnumerableSet.UintSet;

    /* ======== STORAGE ======== */

    struct Token {
        uint256 balance;
        uint256 totalPaidPerSec;
        uint256 divisor;
        uint48 lastUpdate;
    }

    struct Stream {
        uint256 amountPerSec;
        uint48 lastPaid;
        address token;
        uint48 starts;
        uint48 ends;
    }

    string public constant baseURI = 'https://hector.network/pay/';

    /// @notice payer factory
    IHectorProjectFactory public factory;

    /// @notice owner address
    address public owner;

    /// @notice abi encoded value of owner address
    bytes private _owner;

    /// @notice project name
    string public project;

    /// @notice next token id
    uint256 public nextTokenId;

    /// @notice token info
    /// @dev token => info
    mapping(address => Token) public tokens;

    /// @notice stream info
    /// @dev stream id => info
    mapping(uint256 => Stream) public streams;

    /// @notice allows other addresses to interact on owner behalf
    /// @dev user => whitelisted or not for fund
    mapping(address => bool) public payerWhitelists;

    /// @notice whitelist for addresses authorized to withdraw from stream
    /// @dev payee => stream id => user => whitelisted or not for stream
    mapping(address => mapping(uint256 => mapping(address => bool)))
        public streamWhitelists;

    /// @notice tracks debt for streams
    /// @dev stream id => debt amount (20 decimals)
    mapping(uint256 => uint256) public debts;

    /// @notice tracks redeemable amount for streams
    /// @dev stream id => redeemable amount (20 decimals)
    mapping(uint256 => uint256) public redeemables;

    /// @notice payer's active streams
    EnumerableSet.UintSet private activeStreams;

    /* ======== EVENTS ======== */

    event DepositPayer(
        address indexed token,
        address indexed from,
        uint256 amount
    );
    event WithdrawPayer(
        address indexed token,
        address indexed to,
        uint256 amount
    );
    event Withdraw(
        uint256 id,
        address indexed token,
        address indexed to,
        uint256 amount
    );
    event CreateStream(
        uint256 id,
        address indexed token,
        address indexed to,
        uint256 amountPerSec,
        uint48 starts,
        uint48 ends
    );
    event CreateStreamWithReason(
        uint256 id,
        address indexed token,
        address indexed to,
        uint256 amountPerSec,
        uint48 starts,
        uint48 ends,
        string reason
    );
    event ModifyStream(uint256 id, uint256 newAmountPerSec, uint48 newEnds);
    event StopStream(uint256 id);
    event ResumeStream(uint256 id);
    event BurnStream(uint256 id);
    event AddPayerWhitelist(address indexed whitelisted);
    event RemovePayerWhitelist(address indexed removed);
    event AddRedirectStream(uint256 id, address indexed redirected);
    event RemoveRedirectStream(uint256 id);
    event AddStreamWhitelist(uint256 id, address indexed whitelisted);
    event RemoveStreamWhitelist(uint256 id, address indexed removed);
    event UpdateToken(address indexed token);
    event UpdateStream(uint256 id);
    event RepayDebt(uint256 id, address indexed token, uint256 amount);

    /* ======== INITIALIZATION ======== */

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function initialize() external initializer {
        factory = IHectorProjectFactory(msg.sender);
        (owner, project) = abi.decode(factory.parameter(), (address, string));
        _owner = abi.encode(owner);
        payerWhitelists[msg.sender] = true;

        __ERC721_init('MultiPay V2 Stream', 'MULTIPAY-V2-STREAM');
    }

    /* ======== MODIFIER ======== */

    modifier onlyOwner() {
        if (msg.sender != owner) revert NOT_OWNER();
        _;
    }

    modifier onlyOwnerOrWhitelisted() {
        if (msg.sender != owner && payerWhitelists[msg.sender] == false)
            revert NOT_OWNER_OR_WHITELISTED();
        _;
    }

    modifier isValidForSubscription() {
        address validator = factory.validator();

        if (validator != address(0)) {
            if (!IHectorValidator(validator).isValid(_owner))
                revert LIMITED_SUBSCRIPTION();
        }

        _;
    }

    /* ======== POLICY FUNCTIONS ======== */

    /// @notice add address to payer whitelist
    /// @param _toAdd address to whitelist
    function addPayerWhitelist(address _toAdd) external onlyOwner {
        if (_toAdd == address(0)) revert INVALID_ADDRESS();
        if (payerWhitelists[_toAdd] == true) revert ALREADY_WHITELISTED();

        payerWhitelists[_toAdd] = true;

        emit AddPayerWhitelist(_toAdd);
    }

    /// @notice remove address to payer whitelist
    /// @param _toRemove address to remove from whitelist
    function removePayerWhitelist(address _toRemove) external onlyOwner {
        if (_toRemove == address(0)) revert INVALID_ADDRESS();
        if (payerWhitelists[_toRemove] == false) revert NOT_WHITELISTED();

        payerWhitelists[_toRemove] = false;

        emit RemovePayerWhitelist(_toRemove);
    }

    /* ======== VALIDATOR POLICY FUNCTIONS ======== */

    function activeStreamsByRemoveEnded() external returns (uint256 count) {
        uint256 length = activeStreams.length();

        for (uint256 i = 0; i < length; i++) {
            uint256 id = activeStreams.at(count);
            Stream memory stream = streams[id];

            if (stream.ends < block.timestamp || stream.lastPaid == 0) {
                activeStreams.remove(id);
            } else {
                unchecked {
                    ++count;
                }
            }
        }
    }

    /* ======== PAYER FUNCTIONS ======== */

    /// @notice deposit into vault
    /// @param _token token
    /// @param _amount amount (native token decimals)
    function deposit(
        address _token,
        uint256 _amount
    ) external onlyOwnerOrWhitelisted {
        Token storage token = tokens[_token];

        // stores token divisor if it is the first time being deposited
        if (token.divisor == 0) {
            token.divisor = 10 ** (20 - IERC20Metadata(_token).decimals());
        }

        // deposit balance
        uint256 toAdd = _amount * token.divisor;
        token.balance += toAdd;

        // transfer token
        IERC20(_token).safeTransferFrom(msg.sender, address(this), _amount);

        // event
        emit DepositPayer(_token, msg.sender, toAdd);
    }

    /// @notice withdraw tokens that have not been streamed yet
    /// @param _token token
    /// @param _amount amount (native token decimals)
    function withdrawPayer(
        address _token,
        uint256 _amount
    ) external onlyOwnerOrWhitelisted {
        // update token balance
        Token storage token = _updateToken(_token);

        /// withdraw balance (will revert if not enough after updating Token)
        uint256 toDeduct = _amount * token.divisor;
        token.balance -= toDeduct;

        // transfer token
        IERC20(_token).safeTransfer(msg.sender, _amount);

        // event
        emit WithdrawPayer(_token, msg.sender, toDeduct);
    }

    /// @notice same as above but all available tokens
    /// @param _token token
    function withdrawPayerAll(address _token) external onlyOwnerOrWhitelisted {
        // update token balance
        Token storage token = _updateToken(_token);

        // withdraw all balance
        uint256 balance = token.balance;
        token.balance = 0;

        // transfer token
        IERC20(_token).safeTransfer(msg.sender, balance / token.divisor);

        // event
        emit WithdrawPayer(_token, msg.sender, balance);
    }

    /// @notice create stream
    /// @param _token token
    /// @param _to recipient
    /// @param _amountPerSec amount per sec (20 decimals)
    /// @param _starts stream to start
    /// @param _ends stream to end
    function createStream(
        address _token,
        address _to,
        uint256 _amountPerSec,
        uint48 _starts,
        uint48 _ends
    ) external {
        uint256 id = _createStream(_token, _to, _amountPerSec, _starts, _ends);

        emit CreateStream(id, _token, _to, _amountPerSec, _starts, _ends);
    }

    /// @notice create stream with reason
    /// @param _token token
    /// @param _to recipient
    /// @param _amountPerSec amount per sec (20 decimals)
    /// @param _starts stream to start
    /// @param _ends stream to end
    /// @param _reason reason for stream
    function createStreamWithReason(
        address _token,
        address _to,
        uint256 _amountPerSec,
        uint48 _starts,
        uint48 _ends,
        string calldata _reason
    ) external {
        uint256 id = _createStream(_token, _to, _amountPerSec, _starts, _ends);

        emit CreateStreamWithReason(
            id,
            _token,
            _to,
            _amountPerSec,
            _starts,
            _ends,
            _reason
        );
    }

    /// @notice modify current stream
    /// @param _id token id
    /// @param _newAmountPerSec modified amount per sec (20 decimals)
    /// @param _newEnds new end time
    function modifyStream(
        uint256 _id,
        uint256 _newAmountPerSec,
        uint48 _newEnds
    ) external onlyOwnerOrWhitelisted {
        Stream storage stream = _updateStream(_id);

        // prevents zero pay
        if (_newAmountPerSec == 0) revert INVALID_AMOUNT();
        // prevents people from setting end to time already "paid out"
        if (tokens[stream.token].lastUpdate >= _newEnds) revert INVALID_TIME();

        // check if stream is active
        // prevents miscalculation in totalPaidPerSec
        if (stream.lastPaid > 0) {
            tokens[stream.token].totalPaidPerSec += _newAmountPerSec;
            unchecked {
                tokens[stream.token].totalPaidPerSec -= stream.amountPerSec;
            }
        }

        // update stream
        streams[_id].amountPerSec = _newAmountPerSec;
        streams[_id].ends = _newEnds;

        // event
        emit ModifyStream(_id, _newAmountPerSec, _newEnds);
    }

    /// @notice stop current stream
    /// @param _id token id
    function stopStream(uint256 _id) external onlyOwnerOrWhitelisted {
        Stream storage stream = _updateStream(_id);

        // check if stream is active
        if (stream.lastPaid == 0) revert INACTIVE_STREAM();

        unchecked {
            // Track owed until stopStream call
            debts[_id] +=
                (block.timestamp - uint256(tokens[stream.token].lastUpdate)) *
                stream.amountPerSec;

            // stop stream
            stream.lastPaid = 0;
            tokens[stream.token].totalPaidPerSec -= stream.amountPerSec;
        }

        // remove active stream
        activeStreams.remove(_id);

        // event
        emit StopStream(_id);
    }

    /// @notice resume a stopped stream
    /// @param _id token id
    function resumeStream(
        uint256 _id
    ) external onlyOwnerOrWhitelisted isValidForSubscription {
        Stream storage stream = _updateStream(_id);

        // check if stream is inactive
        if (stream.lastPaid > 0) revert ACTIVE_STREAM();
        // check if stream is ended
        if (block.timestamp >= stream.ends) revert STREAM_ENDED();
        // check if payer is in debt
        if (block.timestamp > tokens[stream.token].lastUpdate)
            revert PAYER_IN_DEBT();

        // resume stream
        tokens[stream.token].totalPaidPerSec += stream.amountPerSec;
        streams[_id].lastPaid = uint48(block.timestamp);

        // add active stream
        activeStreams.add(_id);

        // event
        emit ResumeStream(_id);
    }

    /// @notice burns an inactive and withdrawn stream
    /// @param _id token id
    function burnStream(uint256 _id) external {
        if (msg.sender != ownerOf(_id)) revert NOT_OWNER();

        // prevents somebody from burning an active stream or a stream with balance in it
        if (redeemables[_id] > 0 || streams[_id].lastPaid > 0 || debts[_id] > 0)
            revert STREAM_ACTIVE_OR_REDEEMABLE();

        // free up storage
        delete streams[_id];
        delete debts[_id];
        delete redeemables[_id];

        // burn stream
        _burn(_id);

        // event
        emit BurnStream(_id);
    }

    /// @notice manually update stream
    /// @param _id token id
    function updateStream(uint256 _id) external onlyOwnerOrWhitelisted {
        _updateStream(_id);
    }

    /// @notice repay debt
    /// @param _id token id
    /// @param _amount amount to repay (native decimals)
    function repayDebt(uint256 _id, uint256 _amount) external {
        ownerOrNftOwnerOrWhitelisted(_id);

        // update stream to update balances
        Stream storage stream = _updateStream(_id);
        uint256 toRepay;

        unchecked {
            toRepay = _amount * tokens[stream.token].divisor;
            // add to redeemable to payee
            redeemables[_id] += toRepay;
        }

        // reverts if debt cannot be paid
        tokens[stream.token].balance -= toRepay;
        // reverts if paying too much debt
        debts[_id] -= toRepay;

        // event
        emit RepayDebt(_id, stream.token, toRepay);
    }

    /// @notice attempt to repay all debt
    /// @param _id token id
    function repayAllDebt(uint256 _id) external {
        ownerOrNftOwnerOrWhitelisted(_id);

        // update stream to update balances
        Stream storage stream = _updateStream(_id);
        uint256 totalDebt = debts[_id];
        uint256 balance = tokens[stream.token].balance;
        uint256 toRepay;

        unchecked {
            if (balance >= totalDebt) {
                tokens[stream.token].balance -= totalDebt;
                debts[_id] = 0;
                toRepay = totalDebt;
            } else {
                debts[_id] = totalDebt - balance;
                tokens[stream.token].balance = 0;
                toRepay = balance;
            }
        }

        // add to redeemable to payee
        redeemables[_id] += toRepay;

        // event
        emit RepayDebt(_id, stream.token, toRepay);
    }

    /* ======== PAYEE FUNCTIONS ======== */

    /// @notice withdraw from stream
    /// @param _id token id
    function withdraw(uint256 _id) external {
        address nftOwner = ownerOf(_id);

        /// update stream to update available balances
        Stream storage stream = _updateStream(_id);

        // redeem all
        uint256 toRedeem = redeemables[_id] / tokens[stream.token].divisor;
        redeemables[_id] = 0;

        // transfer token
        IERC20(stream.token).safeTransfer(nftOwner, toRedeem);

        // event
        emit Withdraw(_id, stream.token, nftOwner, toRedeem);
    }

    /// @notice add whitelist to stream
    /// @param _id token id
    /// @param _toAdd address to whitelist
    function addStreamWhitelist(uint256 _id, address _toAdd) external {
        if (msg.sender != ownerOf(_id)) revert NOT_OWNER();
        if (_toAdd == address(0)) revert INVALID_ADDRESS();
        if (streamWhitelists[msg.sender][_id][_toAdd] == true)
            revert ALREADY_WHITELISTED();

        streamWhitelists[msg.sender][_id][_toAdd] = true;

        emit AddStreamWhitelist(_id, _toAdd);
    }

    /// @notice remove whitelist to stream
    /// @param _id token id
    /// @param _toRemove address to remove from whitelist
    function removeStreamWhitelist(uint256 _id, address _toRemove) external {
        if (_toRemove == address(0)) revert INVALID_ADDRESS();
        if (msg.sender != ownerOf(_id)) revert NOT_OWNER();
        if (streamWhitelists[msg.sender][_id][_toRemove] == false)
            revert NOT_WHITELISTED();

        streamWhitelists[msg.sender][_id][_toRemove] = false;

        emit RemoveStreamWhitelist(_id, _toRemove);
    }

    /* ======== VIEW FUNCTIONS ======== */

    /// @notice ERC721 token URI
    /// @param _id token id
    function tokenURI(
        uint256 _id
    ) public view virtual override returns (string memory) {
        if (ownerOf(_id) == address(0)) revert STREAM_DOES_NOT_EXIST();
        return
            string(
                abi.encodePacked(
                    baseURI,
                    Strings.toString(block.chainid),
                    '/',
                    Strings.toHexString(uint160(address(this)), 20),
                    '/',
                    Strings.toString(_id)
                )
            );
    }

    /// @notice view only function to see token's totalPaidPerSec
    /// @param _token token
    /// @return totalPaidPerSec of token (20 decimals)
    function totalPaidPerSec(address _token) external view returns (uint256) {
        return tokens[_token].totalPaidPerSec;
    }

    /// @notice view only function to see withdrawable by payer
    /// @param _token token
    /// @return balance amount withdrawable by payer (native decimals)
    function withdrawablePayer(
        address _token
    ) external view returns (uint256 balance) {
        // update token balance
        Token memory token = tokens[_token];
        if (token.divisor == 0) revert TOKEN_NOT_ADDED();

        // streamed from last update to called
        unchecked {
            uint256 streamed = (block.timestamp - uint256(token.lastUpdate)) *
                token.totalPaidPerSec;
            balance = token.balance;

            if (balance >= streamed) {
                // if enough to pay owed then deduct from balance and update to current timestamp
                balance = balance - streamed;
            } else {
                // if not enough then get remainder paying as much as possible then calculating and adding time paid
                balance = balance % token.totalPaidPerSec;
            }
        }

        balance /= token.divisor;
    }

    /// @notice view only function to see withdrawable
    /// @param _id stream id
    /// @return lastUpdate last time Token has been updated
    /// @return debt debt owed to stream (native decimals)
    /// @return withdrawableAmount amount withdrawable by payee (native decimals)
    function withdrawable(
        uint256 _id
    )
        external
        view
        returns (uint256 lastUpdate, uint256 debt, uint256 withdrawableAmount)
    {
        Stream storage stream = streams[_id];
        Token storage token = tokens[stream.token];
        uint256 starts = uint256(stream.starts);
        uint256 ends = uint256(stream.ends);
        uint256 amountPerSec = stream.amountPerSec;
        uint256 divisor = token.divisor;

        {
            uint256 balance = token.balance;
            uint256 streamed;
            unchecked {
                streamed =
                    (block.timestamp - token.lastUpdate) *
                    token.totalPaidPerSec;
            }

            // consider available backup balance
            if (balance < streamed) {
                balance +=
                    factory.getBackupAssetsForProject(
                        owner,
                        project,
                        stream.token
                    ) *
                    divisor;
            }

            if (balance >= streamed) {
                lastUpdate = block.timestamp;
            } else {
                lastUpdate =
                    uint256(token.lastUpdate) +
                    (balance / token.totalPaidPerSec);
            }
        }

        // inactive or cancelled stream
        if (stream.lastPaid == 0 || starts > block.timestamp) {
            return (0, 0, 0);
        }

        uint256 start = max(uint256(stream.lastPaid), starts);
        uint256 stop = min(ends, lastUpdate);
        // if lastUpdate isn't block.timestamp and greater than ends, there is debt.
        if (lastUpdate != block.timestamp && ends > lastUpdate) {
            debt =
                (min(block.timestamp, ends) - max(lastUpdate, starts)) *
                amountPerSec;
        }
        withdrawableAmount = (stop - start) * amountPerSec;

        withdrawableAmount = (withdrawableAmount + redeemables[_id]) / divisor;
        debt = (debt + debts[_id]) / divisor;
    }

    /* ======== INTERNAL FUNCTIONS ======== */

    /// @notice create stream
    /// @param _token token
    /// @param _to recipient
    /// @param _amountPerSec amount per sec (20 decimals)
    /// @param _starts stream to start
    /// @param _ends stream to end
    function _createStream(
        address _token,
        address _to,
        uint256 _amountPerSec,
        uint48 _starts,
        uint48 _ends
    )
        private
        onlyOwnerOrWhitelisted
        isValidForSubscription
        returns (uint256 id)
    {
        if (_starts >= _ends) revert INVALID_TIME();
        if (_starts < block.timestamp) revert INVALID_TIME();
        if (_to == address(0)) revert INVALID_ADDRESS();
        if (_amountPerSec == 0) revert INVALID_AMOUNT();

        Token storage token = _updateToken(_token);
        if (block.timestamp > token.lastUpdate) revert PAYER_IN_DEBT();

        id = nextTokenId;
        tokens[_token].totalPaidPerSec += _amountPerSec;

        unchecked {
            ++nextTokenId;
        }

        streams[id] = Stream({
            amountPerSec: _amountPerSec,
            token: _token,
            lastPaid: uint48(block.timestamp),
            starts: _starts,
            ends: _ends
        });

        // mint ERC721
        _safeMint(_to, id);

        // add active stream
        activeStreams.add(id);
    }

    /// @notice updates token balances
    /// @param _token token to update
    function _updateToken(
        address _token
    ) private returns (Token storage token) {
        token = tokens[_token];
        if (token.divisor == 0) revert TOKEN_NOT_ADDED();

        // streamed from last update to called
        unchecked {
            uint256 streamed = (block.timestamp - uint256(token.lastUpdate)) *
                token.totalPaidPerSec;
            uint256 balance = token.balance;

            // consider available backup balance
            if (balance < streamed) {
                balance +=
                    factory.backupAssetsByProject(owner, project, _token) *
                    token.divisor;
            }

            if (balance >= streamed) {
                // if enough to pay owed then deduct from balance and update to current timestamp
                token.balance = balance - streamed;
                token.lastUpdate = uint48(block.timestamp);
            } else {
                // if not enough then get remainder paying as much as possible then calculating and adding time paid
                token.lastUpdate += uint48(
                    token.balance / token.totalPaidPerSec
                );
                token.balance = balance % token.totalPaidPerSec;
            }
        }

        // event
        emit UpdateToken(_token);
    }

    /// @notice update stream
    /// @param _id token id
    function _updateStream(
        uint256 _id
    ) private returns (Stream storage stream) {
        if (ownerOf(_id) == address(0)) revert STREAM_DOES_NOT_EXIST();

        // update Token info to get last update
        stream = streams[_id];
        Token storage token = _updateToken(stream.token);

        unchecked {
            uint256 lastUpdate = uint256(token.lastUpdate);
            uint256 amountPerSec = stream.amountPerSec;
            uint256 lastPaid = uint256(stream.lastPaid);
            uint256 starts = uint256(stream.starts);
            uint256 ends = uint256(stream.ends);

            // if stream is inactive/cancelled
            if (lastPaid == 0) {
                // can only withdraw redeemable so do nothing
            }
            // stream not updated after start and has ended
            else if (
                // stream not updated after start
                starts > lastPaid &&
                // stream ended
                lastUpdate >= ends
            ) {
                // refund payer for:
                // stream last updated to stream start
                // stream ended to token last updated
                token.balance +=
                    ((starts - lastPaid) + (lastUpdate - ends)) *
                    amountPerSec;
                // payee can redeem:
                // stream start to end
                redeemables[_id] = (ends - starts) * amountPerSec;
                // stream is now inactive
                stream.lastPaid = 0;
                token.totalPaidPerSec -= amountPerSec;
                activeStreams.remove(_id);
            }
            // stream started but has not been updated from after start
            else if (
                // stream started
                lastUpdate >= starts &&
                // stream not updated after start
                starts > lastPaid
            ) {
                // refund payer for:
                // stream last updated to stream start
                token.balance += (starts - lastPaid) * amountPerSec;
                // payer can redeem:
                // stream start to last token update
                redeemables[_id] = (lastUpdate - starts) * amountPerSec;
                stream.lastPaid = uint48(lastUpdate);
            }
            // stream has ended
            else if (
                // stream ended
                lastUpdate >= ends
            ) {
                // refund payer for:
                // stream end to last token update
                token.balance += (lastUpdate - ends) * amountPerSec;
                // add redeemable for:
                // stream last updated to stream end
                redeemables[_id] += (ends - lastPaid) * amountPerSec;
                /// stream is now inactive
                stream.lastPaid = 0;
                token.totalPaidPerSec -= amountPerSec;
                activeStreams.remove(_id);
            }
            // stream is updated before stream starts
            else if (
                // stream not started
                starts > lastUpdate
            ) {
                // refund payer:
                // last stream update to last token update
                token.balance += (lastUpdate - lastPaid) * amountPerSec;
                // update lastpaid to last token update
                stream.lastPaid = uint48(lastUpdate);
            }
            /// updated after start, and has not ended
            else if (
                // stream started
                lastPaid >= starts &&
                // stream has not ended
                ends > lastUpdate
            ) {
                // add redeemable for:
                // stream last update to last token update
                redeemables[_id] += (lastUpdate - lastPaid) * amountPerSec;
                stream.lastPaid = uint48(lastUpdate);
            }
        }

        // emit
        emit UpdateStream(_id);
    }

